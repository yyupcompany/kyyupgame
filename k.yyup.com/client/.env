# Frontend Environment Configuration
# 环境类型配置
VITE_NODE_ENV=development

# API配置 - 动态配置，支持多环境
# 开发环境使用代理，留空让vite代理处理
# ✅ 修复：设置为 /api 使用 Vite 代理，而不是直接访问 localhost:3000
VITE_API_BASE_URL=/api
# API域名列表，逗号分隔
VITE_API_DOMAINS=
# API代理目标（开发环境） - 业务系统后端端口3000
VITE_API_PROXY_TARGET=http://127.0.0.1:3000

# 开发服务器配置 - 业务系统前端端口5173
VITE_DEV_HOST=0.0.0.0
VITE_DEV_PORT=5173
VITE_HMR_HOST=0.0.0.0
VITE_HMR_CLIENT_PORT=24678
VITE_WS_URL=

# 应用配置 - 开发环境使用localhost
VITE_APP_URL=http://localhost:5173
VITE_APP_NAME=幼儿园管理系统

# 统一认证中心配置 - 开发环境使用demo模式
VITE_UNIFIED_AUTH_CENTER_URL=https://rent.yyup.cc
VITE_TENANT_DOMAIN=localhost

# 功能开关
VITE_ENABLE_MOCK=false
VITE_ENABLE_DEBUG=true

# 路由配置
VITE_ROUTER_WHITE_LIST=
VITE_ADMIN_ROLES=admin,super_admin
VITE_LOGIN_PATH=/login
VITE_HOME_PATH=/

# Upload Configuration
VITE_UPLOAD_URL=/api/upload
VITE_UPLOAD_SIZE_LIMIT=10485760

# Token Configuration
VITE_TOKEN_EXPIRE_TIME=86400

# API Timeout
VITE_API_TIMEOUT=15000

# OSS图片资源配置
VITE_APP_USE_OSS=true
VITE_APP_OSS_BASE_URL=https://systemkarder.oss-cn-guangzhou.aliyuncs.com
VITE_APP_LOCAL_BASE_URL=/src/assets/images
VITE_APP_IMAGE_QUALITY=80
VITE_APP_IMAGE_RESIZE=200,200
VITE_APP_OSS_GAMES_PATH=/kindergarten/games/images/
VITE_APP_OSS_ACTIVITIES_PATH=/kindergarten/education/activities/
